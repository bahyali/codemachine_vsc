{
  "name": "code-machine-orchestrator",
  "displayName": "Code Machine Orchestrator",
  "description": "A VS Code extension to orchestrate a requirements-to-code CLI pipeline.",
  "publisher": "CodeMachine",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codemachine.newProject",
    "onCommand:codemachine.showArchitecturePreview",
    "onCommand:codemachine.approvePlan",
    "onCommand:codemachine.runBuildProcess",
    "onCommand:codemachine.approveRequirements",
    "onCommand:codemachine.approveArchitecture",
    "onCommand:codemachine.resetWorkflowPhase",
    "onCommand:codemachine.runTask",
    "onCommand:codemachine.acceptChanges",
    "onCommand:codemachine.rejectChanges"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemachine.newProject",
        "title": "Code Machine: New Project"
      },
      {
        "command": "codemachine.showArchitecturePreview",
        "title": "Code Machine: Show Architecture Preview"
      },
      {
        "command": "codemachine.approveRequirements",
        "title": "Code Machine: Approve Requirements",
        "category": "Code Machine"
      },
      {
        "command": "codemachine.approveArchitecture",
        "title": "Code Machine: Approve Architecture",
        "category": "Code Machine"
      },
      {
        "command": "codemachine.approvePlan",
        "title": "Code Machine: Approve Plan"
      },
      {
        "command": "codemachine.runBuildProcess",
        "title": "Code Machine: Run Build Process",
        "category": "Code Machine"
      },
      {
        "command": "codemachine.resetWorkflowPhase",
        "title": "Code Machine: Reset Project Phase",
        "category": "Code Machine"
      },
      {
        "command": "codemachine.runTask",
        "title": "Code Machine: Run Task",
        "category": "Code Machine"
      },
      {
        "command": "codemachine.acceptChanges",
        "title": "Code Machine: Accept Changes",
        "category": "Code Machine"
      },
      {
        "command": "codemachine.rejectChanges",
        "title": "Code Machine: Reject Changes",
        "category": "Code Machine"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-machine-container",
          "title": "Code Machine",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "code-machine-container": [
        {
          "id": "codeMachine.projectState",
          "name": "Project State"
        },
        {
          "id": "codeMachine.taskBoard",
          "name": "Task Board"
        },
        {
          "id": "codeMachine.artifacts",
          "name": "Artifacts"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codemachine.approveRequirements",
          "when": "view == codeMachine.projectState && codeMachine.phase == 'Specs'",
          "group": "navigation",
          "icon": "$(pass)"
        },
        {
          "command": "codemachine.approveArchitecture",
          "when": "view == codeMachine.projectState && codeMachine.phase == 'Arch'",
          "group": "navigation",
          "icon": "$(pass)"
        },
        {
          "command": "codemachine.approvePlan",
          "when": "view == codeMachine.projectState && codeMachine.phase == 'Plan'",
          "group": "navigation",
          "icon": "$(debug-start)"
        },
        {
          "command": "codemachine.resetWorkflowPhase",
          "when": "view == codeMachine.projectState",
          "group": "navigation@1",
          "icon": "$(history)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "simple-git": "^3.24.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6",
    "markdown-it": "^14.1.0",
    "@types/markdown-it": "^13.0.7"
  }
}
