{
  "name": "code-machine-orchestrator",
  "displayName": "Code Machine Orchestrator",
  "description": "A VS Code extension to orchestrate a requirements-to-code CLI pipeline.",
  "publisher": "CodeMachine",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-machine-container",
          "title": "Code Machine",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "code-machine-container": [
        {
          "id": "codeMachine.projectState",
          "name": "Project State"
        },
        {
          "id": "codeMachine.taskBoard",
          "name": "Task Board"
        },
        {
          "id": "codeMachine.artifacts",
          "name": "Artifacts"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}